<body color:yellow">
<?php
	for ($i=1 ; $i <=10 ;$i++){
		for($j=0;$j<$i;$j++){	
			echo "*";
		}
		echo "<br>";
	}

	for ($i=1 ; $i <=10 ;$i++){
		for($j=1;$j<$i+1;$j++){	
			echo "$j";
		}
		echo "<br>";
 }
 
	for ($i=1 ; $i <=10 ;$i++){
		echo "<center>";
		for($j=0;$j<$i;$j++){	
			echo "*";
		}
		echo "<br>";
	}
?>
</body>
